#include "_sh.h"

/**
 * single_right - Function for handling right redirects
 * @filename: file to search for
 * @content: Output to write to file
 * Return: 0 on success, otherwise returns -1
 * THESE ARE PLACEHOLDERS!!!! REPLACE
*/

int single_right(char *filename, char *content)
{
/* SUDO CODE FOR FUNCTION*/
	int fd = 0;
	if (!filename)
		return (-1);
	fd = open(filename, O_WRONLY | O_CREAT | O_TRUNC, 644)
	if (fd != -1)
	{
		write(fd, content, MAX_WRITE)
		close(fd);
	}
	else
	{
		/*Handle error*/
	}
	return (0);
}

/**
 * double_right - Function for handling right redirects
 * @filename: file to search for
 * @content: Output to write to file
 * THESE ARE PLACEHOLDERS!!!! REPLACE
*/

int double_right(char *filename, char *content)
{
/* SUDO CODE FOR FUNCTION*/

	int fd = 0;

	if (!filename)
		return (-1);
	fd = open(filename, O_WRONLY | O_CREAT | O_APPEND, 644)
	if (fd != -1)
	{
		write(fd, content, MAX_WRITE)
		close(fd);
	}
	else
	{
		/*Handle error*/
	}
	return (0);
}
